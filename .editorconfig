# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Use 4 spaces for indentation in Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab